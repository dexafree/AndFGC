<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Andfgc" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_andfgc</item>
        <item name="popupMenuStyle">@style/PopupMenu.Andfgc</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Andfgc</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Andfgc</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Andfgc</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Andfgc</item>
        <item name="actionModeBackground">@drawable/cab_background_top_andfgc</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_andfgc</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Andfgc</item>
    </style>

    <style name="ActionBar.Solid.Andfgc" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/orange_dark</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_andfgc</item>
        <item name="backgroundSplit">@color/orange_light</item>
        <item name="progressBarStyle">@style/ProgressBar.Andfgc</item>
    </style>

    <style name="ActionBar.Transparent.Andfgc" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_andfgc</item>
        <item name="progressBarStyle">@style/ProgressBar.Andfgc</item>
    </style>
	
    <style name="PopupMenu.Andfgc" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_andfgc</item>	
    </style>
	
    <style name="DropDownListView.Andfgc" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_andfgc</item>
    </style>

    <style name="ActionBarTabStyle.Andfgc" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_andfgc</item>
    </style>
	
    <style name="DropDownNav.Andfgc" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_andfgc</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_andfgc</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_andfgc</item>
    </style>
    
    <style name="ProgressBar.Andfgc" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_andfgc</item>
    </style>
    
    <style name="ActionButton.CloseMode.Andfgc" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_andfgc</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Andfgc.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Andfgc</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Andfgc</item>
    </style>



    <!--<style name="tarifes_dialog" parent="Theme.Platform.AppCompat.Dialog">
        <item name="android:windowTitleStyle">@style/dialog_title_style</item>
    </style>-->



    <style name="tarifes_dialog" parent="Theme.AppCompat.CompactMenu.Dialog">
        <item name="android:windowTitleStyle">@style/dialog_title_style</item>
    </style>

    <style name="dialog_title_style" parent="android:Widget.TextView">
        <item name="android:background">@color/green_ticket</item>
        <item name="android:padding">4dp</item>
    </style>

</resources>