<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card:cardCornerRadius="2dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/account_image"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:maxWidth="45dp"
            android:maxHeight="45dp"
            android:src="@drawable/fgclogo"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:clickable="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@FGC"
            android:id="@+id/account_name"
            android:layout_toRightOf="@+id/account_image"
            android:textColor="@color/tertiary_grey"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="4dp"
            tools:text="\@FGC"
            android:layout_marginBottom="4dp"
            android:layout_alignParentTop="true"
            android:clickable="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:layout_alignBottom="@+id/account_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="6dp"
            android:layout_marginTop="4dp"
            tools:text="1h ago"
            android:layout_alignParentTop="true"
            android:clickable="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message"
            android:layout_alignLeft="@+id/account_name"
            android:layout_alignStart="@+id/account_name"
            android:layout_marginTop="4dp"
            tools:text="Este es un twit que nunca llegÃ³ a publicarse. Pero a que parece real?"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/account_name"
            android:layout_marginBottom="4dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:clickable="false"/>
    </RelativeLayout>





    </android.support.v7.widget.CardView>

</LinearLayout>